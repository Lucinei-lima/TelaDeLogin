        <Label Content="Login" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="289,39,0,0" RenderTransformOrigin="0.59,2.538"/>
        <TextBox HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="Digite sua senha" VerticalAlignment="Top" Width="155" Margin="289,109,0,0" TextChanged="TextBox_TextChanged"/>
